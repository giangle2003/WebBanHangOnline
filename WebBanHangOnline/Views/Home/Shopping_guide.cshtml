@{
    ViewBag.Title = "Shopping_guide";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        /* General Styles */
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .container {
            width: 80%;
            margin: auto;
            overflow: hidden;
            padding: 20px;
        }

        .large-9 {
            background: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 180px;
        }

        /* Entry Header */
        .entry-header {
            background-color: #f8f8f8;
            padding: 20px;
            border-bottom: 2px solid #e5e5e5;
            text-align: center;
        }

        .entry-header-text h1.entry-title {
            font-size: 2.2em;
            color: #333;
            margin-bottom: 10px;
        }

        .entry-header-text h6.entry-category {
            font-size: 1em;
            color: #0073e6;
        }

        /* Entry Content */
        .entry-content {
            padding: 20px;
        }

            .entry-content h2 {
                font-size: 1.8em;
                color: #444;
                margin-bottom: 20px;
                border-bottom: 2px solid #e5e5e5;
                padding-bottom: 10px;
            }

            .entry-content p {
                font-size: 1.1em;
                margin-bottom: 15px;
                color: #555;
            }

            .entry-content ul {
                margin: 20px 0;
                padding-left: 40px;
            }

            .entry-content li {
                margin-bottom: 10px;
            }

            .entry-content img {
                max-width: 100%;
                height: auto;
                border-radius: 5px;
                margin: 20px 0;
            }

            .entry-content figcaption {
                font-size: 0.9em;
                color: #666;
                text-align: center;
                margin-top: 5px;
            }

            /* Links and Buttons */
            .entry-content a {
                color: #0073e6;
                text-decoration: none;
            }

                .entry-content a:hover {
                    text-decoration: underline;
                }

            .entry-content .button {
                display: inline-block;
                padding: 10px 20px;
                margin: 10px 0;
                background-color: #0073e6;
                color: white;
                border-radius: 5px;
                text-decoration: none;
            }

                .entry-content .button:hover {
                    background-color: #005bb5;
                }

        /* Comments Section */
        #comments {
            padding: 20px;
            border-top: 2px solid #e5e5e5;
            margin-top: 40px;
        }

            #comments h3 {
                font-size: 1.5em;
                color: #333;
                margin-bottom: 20px;
            }

            #comments .comment {
                margin-bottom: 20px;
            }

                #comments .comment .comment-author {
                    font-weight: bold;
                    color: #0073e6;
                }

                #comments .comment .comment-text {
                    margin-top: 10px;
                    font-size: 1em;
                    color: #555;
                }
    </style>
</head>
<body>
    <div class="container">
        <div class="large-9 col swift-in-viewport">
            <article id="post-35660"
                     class="post-35660 post type-post status-publish format-standard has-post-thumbnail hentry category-ho-tro-khach-hang swift-in-viewport">
                <div class="article-inner swift-in-viewport">
                    <header class="entry-header">
