@model WebBanHangOnline.Models.EF.Product
@{
    ViewBag.Title = Model.SeoTitle;
    ViewBag.SeoDescription = Model.SeoDescription ?? Model.Title;
    ViewBag.SeoKeyWord = Model.SeoKeywords ?? Model.Title;
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/single_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/single_responsive.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">

<style>
    .table-container {
        margin-top: 50px;
        border: 1px dashed #000;
        border-radius: 20px;
        width: 100%;
        box-sizing: border-box;
    }

    .table-row {
        padding: 10px 0;

    }
    h4 {
        font-size: 18px;
        font-weight: bold;
        font-family: "Times New Roman", Times, serif;
    }
    p {
        margin-left: 30px;
        font-family: "Times New Roman", Times, serif;
        font-size: 14px;
    }

    .table-cell {
        font-size: 16px;
        margin-left: 15px;
        display: flex;
        align-items: center;
    }

    .icon-circle {
        width: 30px;
        height: 30px;
        background-color: #f8f8f8;
        color: black;
        border: 1px solid black;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 10px;
        transition: background-color 0.3s, color 0.3s;
    }

        .icon-circle:hover {
            background-color: black;
            color: white;
            border: 1px solid #007bff;
        }

        .icon-circle i {
            font-size: 16px;
        }

    .table-cell h4 {
        margin: 0;
        display: flex;
        align-items: center;
    }

    .table-cell p {
        margin: 5px 0 0 40px; /* Adjust to align with the text properly */
    }
</style>
@if (Model != null)
{


    <div class="container single_product_container">
        <div class="row">
            <div class="col">

                <!-- Breadcrumbs -->

                <div class="breadcrumbs d-flex flex-row align-items-center">
                    <ul>
                        <li><a href="/">Home</a></li>
                        <li><a href="/danh-muc-san-pham/@Model.ProductCategory.Alias-@Model.ProductCategoryId"><i class="fa fa-angle-right" aria-hidden="true"></i>@Model.ProductCategory.Title</a></li>
                        <li class="active"><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i>@Model.Title</a></li>
                    </ul>
                </div>

            </div>
        </div>

        <div class="row">
            <div class="col-lg-7">
                @if (Model.ProductImage != null && Model.ProductImage.Any())
                {
                    <div class="single_product_pics">
                        <div class="row">
                            <div class="col-lg-3 thumbnails_col order-lg-1 order-2">
                                <div class="single_product_thumbnails">
                                    <ul>
                                        @foreach (var item in Model.ProductImage)
                                        {
                                            if (item.IsDefault)
                                            {
                                                <li class="active"><img src="@item.Image" alt="" data-image="@item.Image"></li>
                                            }
                                            else
                                            {
                                                <li><img src="@item.Image" alt="" data-image="@item.Image"></li>
                                            }
                                        }
                                    </ul>
                                </div>
                            </div>
                            <div class="col-lg-9 image_col order-lg-2 order-1">
                                <div class="single_product_image">
                                    <div class="single_product_image_background" style="background-image:url(@Model.ProductImage.FirstOrDefault(x=>x.IsDefault).Image)"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
            <div class="col-lg-5">
                <div class="product_details">
                    <div class="product_details_title">
                        <h2>@Model.Title</h2>
                        <p>@Model.Description</p>
                        <p>Lượt xem: <b>@Model.ViewCount</b></p>
                        <p>Số lượng: <b>@Model.Quantity</b></p>
                    </div>
                    @if (Model.PriceSale > 0)
                    {
                        <div class="original_price">@WebBanHangOnline.Common.Common.FormatNumber(Model.Price, 0)</div>
                        <div class="product_price">@WebBanHangOnline.Common.Common.FormatNumber(Model.PriceSale, 0)</div>
                    }
                    else
                    {
                        <div class="product_price">@WebBanHangOnline.Common.Common.FormatNumber(Model.Price, 0)</div>
                    }
                    <ul class="star_rating">
                        <li><i class="fa fa-star" aria-hidden="true"></i></li>
                        <li><i class="fa fa-star" aria-hidden="true"></i></li>
                        <li><i class="fa fa-star" aria-hidden="true"></i></li>
                        <li><i class="fa fa-star" aria-hidden="true"></i></li>
                        <li><i class="fa fa-star-o" aria-hidden="true"></i></li>
                    </ul>
                    <div class="color-size-selection" style="display:flex;flex-direction: row;padding-top: 20px">

                        <div class="color-selection" style="padding-right: 50px">
                            <h4>Color:</h4>
                            <ul style="display:flex;flex-direction: row">
                                <li style="padding-right: 30px"><input type="radio" name="color" id="color_black" value="Black" checked> <label for="color_black">Đen</label></li>
                                <li style="padding-right: 30px"><input type="radio" name="color" id="color_blue" value="Blue"> <label for="color_blue">Xanh</label></li>
                                <li style="padding-right: 30px"><input type="radio" name="color" id="color_white" value="White"> <label for="color_white">Trắng</label></li>
                            </ul>
                        </div>
                        <div class="size-selection">
                            <h4>Size:</h4>
                            <select name="size" id="size">
                                <option value="S">S</option>
                                <option value="M">M</option>
                                <option value="L">L</option>
                                <option value="XL">XL</option>
                            </select>
                        </div>
                    </div>
                    <div class="quantity d-flex flex-column flex-sm-row align-items-sm-center">
                        <span>Quantity:</span>
                        <div class="quantity_selector">
                            <span class="minus"><i class="fa fa-minus" aria-hidden="true"></i></span>
                            <span id="quantity_value">1</span>
                            <span class="plus"><i class="fa fa-plus" aria-hidden="true"></i></span>
                        </div>
                        @*<div class="red_button add_to_cart_button"><a href="#" class="btnAddToCart" data-id="@Model.Id">add to cart</a></div>*@
                    <div class="red_button add_to_cart_button" style="display: block !important; visibility:visible !important; opacity: 1">
                        <input type="hidden" id="hiddenSelected" name="selectedValue">

                       <a href="#" class="btnAddToCart" data-id="@Model.Id">
                            add to cart
                        </a>
                    </div>
                        <div class="product_favorite d-flex flex-column align-items-center justify-content-center"></div>
                    </div>

                </div>
               

                    <div class="table-container">
                        <div class="table-row" style="border-bottom: 1px dashed #000;">
                            <div class="table-cell">
                                <div class="icon-circle">
                                    <i class="fas fa-shopping-cart"></i>
                                </div>
                                <h4>HƯỚNG DẪN MUA HÀNG</h4>
                            </div>
                            <p>Thuận tiện mua sắm trên nền tảng website FRESHSTYLE SHOP (<a style="color: #007bff;" href="/home/shopping_guide">Xem chi tiết</a>)</p>
                        </div>
                        <div class="table-row" style="border-bottom: 1px dashed #000;">
                            <div class="table-cell">
                                <div class="icon-circle">
                                    <i class="fas fa-shopping-cart"></i>
                                </div>
                                <h4>CHÍNH SÁCH KHÁCH HÀNG THÂN THIẾT</h4>
                            </div>
                            <p>Mang tới cho khách hàng sự <strong>hài lòng</strong> toàn vẹn từ sản phẩm đến dịch vụ (<a style="color: #007bff;" href="/home/accumulate_point">Xem chi tiết</a>)</p>
                        </div>
                        <div class="table-row" style="border-bottom: 1px dashed #000;">
                            <div class="table-cell">
                                <div class="icon-circle">
                                    <i class="fas fa-shopping-cart"></i>
                                </div>
                                <h4>TÍCH ĐIỂM TRỌN ĐỜI</h4>
                            </div>
                            <p>Tiết kiệm lên đến <strong>3% hóa đơn</strong> (<a style="color: #007bff;" href="/home/accumulate_point">Xem chi tiết</a>)</p>
                        </div>
                        <div class="table-row" style="border-bottom: 1px dashed #000;">
                            <div class="table-cell">
                                <div class="icon-circle">
                                    <i class="fas fa-shopping-cart"></i>
                                </div>
                                <h4>ĐỔI HÀNG NHANH CHÓNG</h4>
                            </div>
                            <p>Được đổi trả hàng nhanh chóng lên tới <strong>15 ngày</strong> cho sản phẩm lỗi&nbsp;(<a style="color: #007bff;" href="/home/exchange">Xem chi tiết</a>)</p>
                        </div>
                        <div class="table-row">
                            <div class="table-cell">
                                <div class="icon-circle">
                                    <i class="fas fa-shopping-cart"></i>
                                </div>
                                <h4>MIỄN PHÍ VẬN CHUYỂN TOÀN QUỐC</h4>
                            </div>
                            <p>Áp dụng với hóa đơn từ <strong>599.000Đ</strong> (<a style="color: #007bff;" href="/home/ship" data-wplink-edit="true">Xem chi tiết</a>)</p>
                        </div>
                    </div>



                </div>


            </div>

    </div>

    <div class="tabs_section_container">

        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="tabs_container">
                        <ul class="tabs d-flex flex-sm-row flex-column align-items-left align-items-md-center justify-content-center">
                            <li class="tab active" data-active-tab="tab_1"><span>Description</span></li>
                            @*<li class="tab" data-active-tab="tab_2"><span>Additional Information</span></li>*@
                            <li class="tab" data-active-tab="tab_3"><span>Reviews</span></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">

                    <!-- Tab Description -->

                    <div id="tab_1" class="tab_container active">
                        <div class="row">
                            @Html.Raw(Model.Detail)
                        </div>
                    </div>

                    <!-- Tab Additional Info -->
                    <!-- Tab Reviews -->

                    <div id="tab_3" class="tab_container">
                        <div class="row">

                            <!-- User Reviews -->

                            <div class="col-lg-6 reviews_col">
                                @Html.Action("_Load_Review", "Review", new { productId = Model.Id })

                            </div>

                            <!-- Add Review -->

                            <div class="col-lg-6 add_review_col">

                                @Html.Action("_Review", "Review", new { productId = Model.Id })

                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>

}
@section scripts{
    <script src="~/Content/assets/js/single_custom.js"></script>
    <script>
        const colorRadioButtons = document.querySelectorAll('input[name="color"]');
        const sizeSelect = document.getElementById('size');
        const hiddenSelectedField = document.getElementById('hiddenSelected');

        colorRadioButtons.forEach(button => {
            button.addEventListener('click', () => {
                hiddenSelectedField.value = `<span class="math-inline">\{button\.value\}\-</span>{sizeSelect.value}`; // Combine color and size
            });
        });

        sizeSelect.addEventListener('change', () => {
            hiddenSelectedField.value = `<span class="math-inline">\{colorRadioButtons\.checked\.value\}\-</span>{sizeSelect.value}`; // Combine color and size
        });

    </script>
}